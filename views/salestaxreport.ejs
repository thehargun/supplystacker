<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Sales Tax Report</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .dropdown {
            margin-bottom: 20px;
        }
        .button {
            background-color: #66b3ff;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 12px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
        .passcode-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.7);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
        .passcode-box {
            background: white;
            padding: 40px;
            border-radius: 12px;
            text-align: center;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        }
        .passcode-box h2 {
            margin-bottom: 20px;
            color: #2c3e50;
        }
        .passcode-box input {
            padding: 12px 20px;
            font-size: 18px;
            border: 2px solid #dce4ec;
            border-radius: 8px;
            text-align: center;
            width: 200px;
            letter-spacing: 8px;
        }
        .passcode-box input:focus {
            outline: none;
            border-color: #3498db;
        }
        .passcode-box button {
            display: block;
            width: 100%;
            margin-top: 15px;
            padding: 12px;
            background: #3498db;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
        }
        .passcode-box button:hover {
            background: #2980b9;
        }
        .passcode-error {
            color: #e74c3c;
            margin-top: 10px;
            display: none;
        }
        .report-content {
            display: none;
        }
        .back-link {
            display: inline-block;
            margin-bottom: 20px;
            color: #3498db;
            text-decoration: none;
        }
        .back-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="passcode-overlay" id="passcodeOverlay">
        <div class="passcode-box">
            <h2>üîí Enter Passcode</h2>
            <p style="color:#7f8c8d; margin-bottom:20px;">This report is protected</p>
            <input type="password" id="passcodeInput" maxlength="4" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢" autofocus>
            <button onclick="checkPasscode()">Unlock Report</button>
            <p class="passcode-error" id="passcodeError">Incorrect passcode. Try again.</p>
        </div>
    </div>

    <div class="container report-content" id="reportContent">
        <a href="/admin" class="back-link">‚Üê Back to Admin</a>
        <h1>Admin Sales Tax Report</h1>
        <form action="/admin/salestaxreport" method="POST">
            <div class="dropdown">
                <label for="quarter">Select Quarter:</label>
                <select name="quarter" id="quarter" required>
                    <% quarters.forEach(function(quarter) { %>
                        <option value="<%= quarter.start %>|<%= quarter.end %>" <%= selectedQuarter === (quarter.start + '|' + quarter.end) ? 'selected' : '' %>>
                            <%= quarter.label %>
                        </option>
                    <% }); %>
                </select>
            </div>
            <button type="submit" class="button">Generate Report</button>
        </form>

        <% if (invoices.length > 0) { %>
            <h2>Sales Tax Report for <%= selectedQuarter %></h2>
            <table>
                <thead>
                    <tr>
                        <th>Invoice Number</th>
                        <th>Date</th>
                        <th>Sales Tax</th>
                        <th>Total Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% invoices.forEach(function(invoice) { %>
                        <tr>
                            <td><a href="/admin/invoices/<%= invoice.invoiceNumber %>"><%= invoice.invoiceNumber %></a></td>
                            <td><%= invoice.date %></td>
                            <td>$<%= invoice.salesTax %></td>
                            <td>$<%= invoice.totalAmount %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
            <h3>Total Gross Receipts from All Sales: $<%= totalGrossReceipts %></h3>
            <h3>Receipts Not Subject to Sales Tax: $<%= receiptsNotSubjectToSalesTax %></h3>
            <h3>Sales Tax Collected: $<%= totalSalesTax %></h3>
        <% } %>
    </div>

    <script>
        const CORRECT_PASSCODE = '6697';
        const UNLOCK_DURATION = 5 * 60 * 1000; // 5 minutes in milliseconds
        
        // Check if unlocked within the last 5 minutes
        const unlockTime = localStorage.getItem('reportUnlockTime');
        if (unlockTime && (Date.now() - parseInt(unlockTime)) < UNLOCK_DURATION) {
            document.getElementById('passcodeOverlay').style.display = 'none';
            document.getElementById('reportContent').style.display = 'block';
        }
        
        document.getElementById('passcodeInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                checkPasscode();
            }
        });
        
        function checkPasscode() {
            const input = document.getElementById('passcodeInput').value;
            if (input === CORRECT_PASSCODE) {
                localStorage.setItem('reportUnlockTime', Date.now().toString());
                document.getElementById('passcodeOverlay').style.display = 'none';
                document.getElementById('reportContent').style.display = 'block';
            } else {
                document.getElementById('passcodeError').style.display = 'block';
                document.getElementById('passcodeInput').value = '';
                document.getElementById('passcodeInput').focus();
            }
        }
    </script>
</body>
</html>
