<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vendor Portal</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f4f4f4;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
            cursor: pointer;
        }
        tr:hover {
            background-color: #f5f5f5;
        }
        .button {
            padding: 10px 15px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .button:hover {
            background-color: #45a049;
        }
        .button-delete {
            background-color: #f44336;
        }
        .button-delete:hover {
            background-color: #d32f2f;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Vendor Purchases</h1>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Purchase ID</th>
                    <th>Vendor Name</th>
                    <th>Date Created</th>
                    <th>Invoice Number</th>
                    <th>Cash Paid</th>
                    <th>Account Paid</th>
                    <th>Invoice Total</th>
                    <th>Account Balance</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% purchases.forEach(function(purchase) { %>
                    <tr>
                        <td><a href="/admin/purchases/<%= purchase.PurchaseID %>"><%= purchase.PurchaseID %></a></td>
                        <td><%= purchase.vendorName %></td>
                        <td><%= purchase.dateCreated %></td>
                        <td><%= purchase.invoiceNumber %></td>
                        <td>$<%= (purchase.cashPaid || 0).toFixed(2) %></td>
                        <td>$<%= (purchase.accountPaid || 0).toFixed(2) %></td>
                        <td>$<%= (purchase.invoiceTotal || 0).toFixed(2) %></td>
                        <td>$<%= (purchase.accountBalance || 0).toFixed(2) %></td>
                        <td>
                            <form action="/admin/purchases/delete/<%= purchase.PurchaseID %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
