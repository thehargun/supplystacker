<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Payments</title>
    <!-- Add your CSS stylesheets or other head content here -->
    <style>
        /* Add your custom CSS styles here */
        body {
            font-family: Arial, sans-serif;
        }
        h1 {
            color: blue;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #dddddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .actions {
            margin-top: 20px;
        }
        .actions button {
            margin-right: 10px;
        }
        .btn-danger {
            background-color: #ff6666;
            color: white;
            border: none;
            padding: 8px 12px;
            cursor: pointer;
        }
        .btn-primary {
            background-color: #66b3ff;
            color: white;
            border: none;
            padding: 8px 12px;
            cursor: pointer;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Manage Payments</h1>
        <table>
            <thead>
                <tr>
                    <th>Invoice Number</th>
                    <th>Company Name</th>
                    <th>Date Created</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% invoices.forEach(invoice => { %>
                    <tr>
                        <td><%= invoice.invoiceNumber %></td>
                        <td><%= invoice.companyName %></td>
                        <td><%= new Date(invoice.dateCreated).toDateString() %></td>
                        <td>$<%= invoice.totalBalance.toFixed(2) %></td>
                        <td><%= invoice.paid ? 'Paid' : 'Unpaid' %></td>
                        <td>
                            <!-- Go to Invoice Button -->
                            <a href="/admin/invoices/<%= invoice.invoiceNumber %>" class="btn btn-primary">Go to Invoice</a>
                            
                            <!-- Delete Button -->
                            <button onclick="confirmDelete('<%= invoice.invoiceNumber %>')" class="btn btn-danger">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div class="actions">
            <form action="/admin" method="get">
                <button type="submit">Go Back to Admin Dashboard</button>
            </form>
            <form action="/logout" method="get">
                <button type="submit">Logout</button>
            </form>
        </div>
    </div>
    <script>
        function confirmDelete(invoiceNumber) {
            if (confirm('Are you sure you want to delete this invoice?')) {
                window.location.href = `/admin/invoices/delete/${invoiceNumber}`;
            }
        }
    </script>
    <!-- Add your scripts or other body content here -->
</body>
</html>