<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Inventory Item</title>
    <script>
        function roundToNearestQuarter(value) {
            return (Math.round(value * 4) / 4).toFixed(2);
        }

        function autoPriceRetail() {
            const cost = parseFloat(document.getElementById('cost').value);
            if (isNaN(cost)) return;

            document.getElementById('priceLevel1').value = roundToNearestQuarter(1.1 * cost + 0.25);
            document.getElementById('priceLevel2').value = roundToNearestQuarter(1.15 * cost + 0.5);
            document.getElementById('priceLevel3').value = roundToNearestQuarter(1.3 * cost + 1);
        }

        function vPackAutoPrice() {
            const cost = parseFloat(document.getElementById('cost').value);
            if (isNaN(cost)) return;

            document.getElementById('priceLevel1').value = roundToNearestQuarter(1.15 * cost + 0.25);
            document.getElementById('priceLevel2').value = roundToNearestQuarter(1.25 * cost + 0.5);
            document.getElementById('priceLevel3').value = roundToNearestQuarter(1.45 * cost + 1);
        }
    </script>
</head>
<body>
    <h1>Add Inventory Item</h1>
    <form action="/admin/add-inventory" method="post" enctype="multipart/form-data">
        <label for="itemName">Item Name:</label>
        <input type="text" id="itemName" name="itemName" required><br>

        <label for="itemCategory">Item Category:</label>
        <input type="text" id="itemCategory" name="itemCategory"><br>

        <label for="cost">Cost:</label>
        <input type="number" step="0.01" id="cost" name="cost"><br>

        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity"><br>

        <label for="priceLevel1">Price Level 1:</label>
        <input type="number" step="0.01" id="priceLevel1" name="priceLevel1">
        <button type="button" onclick="autoPriceRetail()">Auto Price Retail</button>
        <button type="button" onclick="vPackAutoPrice()">VPack Auto Price</button><br>

        <label for="priceLevel2">Price Level 2:</label>
        <input type="number" step="0.01" id="priceLevel2" name="priceLevel2"><br>

        <label for="priceLevel3">Price Level 3:</label>
        <input type="number" step="0.01" id="priceLevel3" name="priceLevel3"><br>

        <label for="image">Image:</label>
        <input type="file" id="image" name="image"><br>
        
        <button type="submit">Add Item</button>
    </form>
    <a href="/admin/view-inventory">Back to Inventory List</a>
</body>
</html>
